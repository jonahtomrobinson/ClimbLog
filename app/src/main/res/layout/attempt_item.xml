<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:id="@+id/tv" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:hapticFeedbackEnabled="false"
        android:paddingTop="5dp" android:paddingBottom="5dp">


    <TextView
            android:id="@+id/tv_att_num"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            app:fontFamily="@font/ubuntu"
            android:layout_width="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1" android:layout_marginStart="4dp"/>

    <TextView
            android:id="@+id/tv_att_date"
            android:layout_width="155dp"
            android:textSize="18sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_att_num"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"
            android:singleLine="true"/>


    <TextView
            android:id="@+id/tv_att_attempts"
            android:textSize="18sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="120dp" app:layout_constraintStart_toEndOf="@+id/tv_att_date"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>