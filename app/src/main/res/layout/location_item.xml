<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange" android:layout_margin="20dp" android:padding="10dp">


    <TextView
            android:id="@+id/tv_location_name"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="0dp"/>

    <TextView
            android:id="@+id/tv_location_address"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_last_visited"
            app:layout_constraintEnd_toStartOf="@+id/tv_location_last_visited"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:id="@+id/tv_location_last_visited"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_location_address"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_name"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_star_clear"
            android:id="@+id/imageButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>