<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:paddingBottom="15dp" android:paddingLeft="15dp" android:paddingRight="15dp"
        android:paddingTop="5dp" android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="5dp">


    <TextView
            android:id="@+id/tv_location_name"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/opensans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="0dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tv_location_favourite"
            android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/tv_location_address"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/opensans"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tv_location_last_visited"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/tv_location_name"/>
    <TextView
            android:id="@+id/tv_location_last_visited"
            android:layout_width="120dp"
            android:textSize="20sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/opensans"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_name"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_star_clear"
            android:id="@+id/tv_location_favourite" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"/>


</android.support.constraint.ConstraintLayout>