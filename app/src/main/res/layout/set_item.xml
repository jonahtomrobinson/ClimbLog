<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange" android:layout_margin="20dp"
        android:paddingBottom="15dp" android:paddingLeft="15dp" android:paddingRight="15dp"
        android:paddingTop="5dp">


    <TextView
            android:id="@+id/tv_set_id"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_set_location_name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/tv_set_location_name"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>