<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite" android:layout_margin="20dp"
        android:paddingBottom="10dp" android:paddingLeft="10dp" android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/tv">


    <TextView
            android:id="@+id/tv_set_type"
            android:layout_height="32dp"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_width="69dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"/>

    <TextView
            android:id="@+id/tv_set_difficulty"
            android:layout_width="65dp"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_set_type"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"
            android:singleLine="true"/>


    <TextView
            android:id="@+id/tv_set_identifier"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="152dp" app:layout_constraintStart_toEndOf="@+id/tv_set_difficulty"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"

            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_completed"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/tv_set_color"
            android:layout_width="wrap_content"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_set_identifier"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:maxLines="1"
            android:singleLine="true"
    />

    <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_completed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorDark"
            app:layout_constraintVertical_bias="0.523"
            android:buttonTint="@color/colorDark" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_set_identifier" android:layout_marginEnd="6dp"
            android:layout_marginStart="4dp"/>



</android.support.constraint.ConstraintLayout>