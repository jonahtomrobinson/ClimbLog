<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="10dp" android:paddingLeft="10dp" android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:id="@+id/tv" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:hapticFeedbackEnabled="false">


    <TextView
            android:id="@+id/tv_type"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_width="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"/>

    <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_type"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"
            android:singleLine="true"/>


    <TextView
            android:id="@+id/tv_identifier"
            android:textSize="20sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="140dp" app:layout_constraintStart_toEndOf="@+id/tv_difficulty"
            app:layout_constraintBottom_toBottomOf="parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"

            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/tv_set_color"
            android:layout_width="wrap_content"
            android:textSize="26sp"
            android:padding="0dp"
            android:textColor="@color/colorDark"
            android:textStyle="bold" app:fontFamily="@font/ubuntu"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_identifier"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:maxLines="1"
            android:singleLine="true"
    />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_completed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorDark"
            android:buttonTint="@color/colorDark" app:layout_constraintEnd_toEndOf="parent"
    />


</android.support.constraint.ConstraintLayout>